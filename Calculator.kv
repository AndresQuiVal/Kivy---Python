#File Name: calculator_kivy.py
#: kivy 1.9.1

<CustomButton@Button>:
	font_size: 40
	background_color: [0,0,0,1]
	color: [0,0,1,1]

<mainCalculator>:
	id: main
	display: inputBox
	spacing: 5
	padding: 5
	rows: 5
	TextInput:
		id: inputBox
		multiline: False
		font_size: 50
	
	BoxLayout:
		padding: 5
		spacing: 5
		CustomButton:
			text: "7"
			on_press: helllo.text += self.text
		CustomButton:
			text: "8"
			on_release: main.appendFunction("8")
		CustomButton:
			text: "9"
			on_release: main.appendFunction("9")
		CustomButton:
			text: "x"
			on_release: main.appendFunction("x")
	
	BoxLayout:
		padding: 5
		spacing: 5
		CustomButton:
			text: "4"
			on_release: main.appendFunction("4")
		CustomButton:
			text: "5"
			on_release: main.appendFunction("5")
		CustomButton:
			text: "6"
			on_release: main.appendFunction("6")
		CustomButton:
			text: "/"
			on_release: main.appendFunction("/")
	
	BoxLayout:
		padding: 5
		spacing: 5
		CustomButton:
			text: "1"
			on_release: main.appendFunction("1")
		CustomButton:
			text: "2"
			on_release: main.appendFunction("2")
		CustomButton:
			text: "3"
			on_release: main.appendFunction("3")
		CustomButton:
			text: "+"
			on_release: main.appendFunction("+")
	
	BoxLayout:
		padding: 5
		spacing: 5
		CustomButton:
			text: "-"
			on_release: main.appendFunction("-")
		CustomButton:
			text: "0"
			on_release: main.appendFunction("0")
		CustomButton:
			text: "="
			on_release: main.calculate(inputBox.text)
		CustomButton:
			text: "Clear"
			on_release: inputBox.text = ""
	
	